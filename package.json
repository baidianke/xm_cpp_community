{
  "name": "xm_cpp_community",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development XM=dev next dev",
    "local:test": "cross-env NODE_ENV=development XM=test next dev",
    "build:dev": "cross-env NODE_ENV=production XM=dev next build",
    "build:test": "cross-env NODE_ENV=production XM=test next build",
    "build:test3": "cross-env NODE_ENV=production XM=test3 next build",
    "build:gray": "cross-env NODE_ENV=production XM=gray next build",
    "build:prod": "cross-env NODE_ENV=production XM=prod next build",
    "server:dev": "cross-env NODE_ENV=production XM=dev pm2 start",
    "server:test": "cross-env NODE_ENV=production XM=prod pm2 start",
    "server:test3": "cross-env NODE_ENV=production XM=prod pm2 start",
    "server:gray": "cross-env NODE_ENV=production XM=prod pm2 start",
    "server:prod": "cross-env NODE_ENV=production XM=prod pm2 start",
    "start": "next start",
    "lint": "next lint",
    "analyze": "cross-env ANALYZE=true yarn build:test",
    "serve:runtime": "pm2-runtime start ecosystem.config.js",
    "test": "XM=test BUILD_ENV=test jest",
    "logs": "pm2 logs"
  },
  "dependencies": {
    "@sentry/nextjs": "^7.11.1",
    "next": "12.2.5",
    "nprogress": "^0.2.0",
    "pm2": "^5.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.2.5",
    "@types/node": "18.7.13",
    "@types/nprogress": "^0.2.0",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "cross-env": "^7.0.3",
    "eslint": "8.22.0",
    "eslint-config-next": "12.2.5",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.0.0",
    "lint-staged": "^13.0.3",
    "next-with-less": "^2.0.5",
    "typescript": "4.8.2"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,md,js,jsx,ts,tsx,css,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{css,less}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
